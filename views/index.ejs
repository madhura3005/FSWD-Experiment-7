<!DOCTYPE html>
<html>
<head>
  <title>Student CRUD App</title>
</head>
<body>
  <h1>Student Records</h1>

  <form action="/create" method="POST">
    <input type="text" name="name" placeholder="Name" required>
    <input type="text" name="rollno" placeholder="Roll No" required>
    <input type="email" name="email" placeholder="Email" required>
    <button type="submit">Add Student</button>
  </form>

  <ul>
    <% students.forEach(student => { %>
      <li>
        <strong><%= student.name %></strong> - Roll No: <%= student.rollno %> - Email: <%= student.email %>
        <form action="/update/<%= student._id %>" method="POST" style="display:inline;">
          <input type="text" name="name" value="<%= student.name %>" required>
          <input type="text" name="rollno" value="<%= student.rollno %>" required>
          <input type="email" name="email" value="<%= student.email %>" required>
          <button type="submit">Update</button>
        </form>
        <a href="/delete/<%= student._id %>">Delete</a>
      </li>
    <% }) %>
  </ul>
</body>
</html>
